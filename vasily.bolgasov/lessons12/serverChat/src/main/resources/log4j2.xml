<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="File1" fileName="connectLog.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.vega.server" level="trace" additivity="false">
            <AppenderRef ref="File1"/>
        </Logger>
    </Loggers>
</Configuration>